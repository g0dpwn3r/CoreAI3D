{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "description": "Targeting Windows with MSVC, Debug configuration.",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CXX_STANDARD": "17"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "description": "Targeting Windows with MSVC, Release configuration.",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CXX_STANDARD": "17"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "linux-x64-debug-wsl",
      "displayName": "Linux x64 Debug (WSL)",
      "description": "Targeting WSL (Linux) with GCC/Clang, Debug configuration.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_PREFIX_PATH": "/usr/local",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_CXX_STANDARD": "17",
        "BOOST_ROOT": "/usr/include/boost", 
        "Boost_USE_STATIC_LIBS": "ON"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/1.0": {
          "sourceDir": "$env{HOME}/.vs/${projectDirName}"
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "copySourcesOptions": {
            "method": "rsync",
            "exclusionList": [
              ".vs",
              ".git",
              "vcpkg_installed",
              "vcpkg",
              "mysql-connector-cpp",
              "protobuf",
              "build",
              "CMakeCache.txt",
              "CMakeFiles"
            ]
          },
          "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
            "intelliSenseMode": "linux-gcc-x64",
            "copySources": true
            // You can add copySourcesOptions here if needed for rsync exclusions
            // "copySourcesOptions": "--exclude=.vs/ --exclude=build/"
          }
        }
      },
      "environment": {
        "PKG_CONFIG_PATH": "/usr/local/lib/pkgconfig"
      }
    },
    {
      "name": "linux-x64-release-wsl",
      "displayName": "Linux x64 Release (WSL)",
      "description": "Targeting WSL (Linux) with GCC/Clang, Release configuration.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_PREFIX_PATH": "/usr/local",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_CXX_STANDARD": "17"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/1.0": {
          "sourceDir": "$env{HOME}/.vs/${projectDirName}"
        }
      },
      "environment": {
        "PKG_CONFIG_PATH": "/usr/local/lib/pkgconfig"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "configurePreset": "windows-x64-debug"
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "configurePreset": "windows-x64-release"
    },
    {
      "name": "linux-x64-debug-wsl",
      "displayName": "Linux x64 Debug (WSL)",
      "configurePreset": "linux-x64-debug-wsl"
    },
    {
      "name": "linux-x64-release-wsl",
      "displayName": "Linux x64 Release (WSL)",
      "configurePreset": "linux-x64-release-wsl"
    }
  ],
  "testPresets": [
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "configurePreset": "windows-x64-debug"
    },
    {
      "name": "linux-x64-debug-wsl",
      "displayName": "Linux x64 Debug (WSL)",
      "configurePreset": "linux-x64-debug-wsl"
    }
  ]
